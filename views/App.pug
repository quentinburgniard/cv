extends layout

block content
  include app/mixins
  div(class="container")
    div(class="row")
      div(class="col-12")
        div(class="ds-title")
          h1(class="_ds-title title")= __("My CV")
  section(class="ds-carousel-image")
    div(class="container")
      div(class="row")
        div(class="col-10 col-xl-5")
          img(alt="Screenshot Casa da Sogra Website" src="https://digitalleman.fra1.digitaloceanspaces.com/casasogra_app_ea3b584d7a.jpg")
      div(class="ds-carousel-icons icon-action-left" style="display: none")
        i(class="bi bi-arrow-left-circle-fill")
      div(class="ds-carousel-icons icon-action-right" style="display: none")
        i(class="bi bi-arrow-right-circle-fill")
  div(class="container")
    div(class="row")
      div(class="col-12")
        div(class="ds-title")
          h1(class="_ds-title title")= __("My information")
    form(class="ds-form")
      div(class="row")
        div(class="col-12 col-sm-6")
          div(class="_ds-form text")
            label(for="title")= __("Pick-up line")
            input(id="title" name="title" type="text" value=cv.data.attributes.title)
      div(class="row")
        div(class="col-12 col-sm-6")
          div(class="_ds-form text")
            label(for="image")= __("Profile picture")
            input(disabled id="image" name="image" type="text" value=cv.data.attributes.image.data.attributes.description)
      div(class="row")
        div(class="col-12 col-md-4 col-sm-6")
          div(class="_ds-form text")
            label(for="firstName")= __("First name")
            input(id="firstName" name="firstName" placeholder="Quentin" type="text" value=cv.data.attributes.firstName)
        div(class="col-12 col-md-4 col-sm-6")
          div(class="_ds-form text")
            label(for="lastName")= __("Last name")
            input( placeholder="Burgniard" type="text" value=cv.data.attributes.lastName)
        div(class="col-12 col-md-4 col-sm-6")
          div(class="_ds-form text")
            label(for="title")= __("Date of Birth")
            input(type="date" value=cv.data.attributes.birthdate)
        div(class="col-12 col-md-4 col-sm-6")
          div(class="_ds-form text")
            label(for="email")= __("Email")
            input(autocapitalize="none" id="email" name="email" placeholder="contact@quentinburgniard.com" type="email" value=cv.data.attributes.email)
        div(class="col-12 col-md-4 col-sm-6")
          div(class="_ds-form text")
            label(for="phoneNumber")= __("Phone number")
            input(id="phoneNumber" name="phoneNumber" placeholder="+41 76 595 73 42" type="tel" value=cv.data.attributes.phoneNumber)
        div(class="col-12 col-md-4 col-sm-6")
          div(class="_ds-form text")
            label(for="website")= __("Website")
            input(id="website" name="website" placeholder="https://digitalleman.com" type="url" value=cv.data.attributes.website)
        div(class="col-12")
          div(class="_ds-form text")
            label(for="address")= __("Address")
            textarea(name="address")= cv.data.attributes.address
    div(class="row")
      div(class="col-12")
        div(class="ds-title")
          h1(class="_ds-title title")= __("Professional Background")
      each event in cv.data.attributes.experiences
        div(class="col-12")
          a(alt=event.title class="ds-link-small" href=`/${language}/${cv.data.id}/experiences/${event.id}`)
            div(class="_ds-link body")
              div(class="_ds-link-small title")= event.title
            div(class="_ds-link action-icon")
              i(class="bi bi-chevron-right")
      div(class="col-12")
        a(alt="Backend Development" class="ds-link" href=`/${language}/${cv.data.id}/experiences/new`)
          div(class="_ds-link body")
            div(class="_ds-link title") Add
          div(class="_ds-link action-icon")
            i(class="bi bi-plus-lg")
    div(class="row")
      div(class="col-12")
        div(class="ds-title")
          h1(class="_ds-title title")= __("Education")
      each event in cv.data.attributes.educations
        div(class="col-12")
          a(alt=event.title class="ds-link-small" href=`/${language}/${cv.data.id}/educations/${event.id}`)
            div(class="_ds-link body")
              div(class="_ds-link-small title")= event.title
            div(class="_ds-link action-icon")
              i(class="bi bi-chevron-right")
      div(class="col-12")
        a(alt="Backend Development" class="ds-link" href=`/${language}/${cv.data.id}/educations/new`)
          div(class="_ds-link body")
            div(class="_ds-link title") Add
          div(class="_ds-link action-icon")
            i(class="bi bi-plus-lg")
    div(class="row")
      div(class="col-12")
        div(class="ds-title")
          h1(class="_ds-title title")= __("Miscellaneous")
      each event in cv.data.attributes.miscellaneous
        div(class="col-12")
