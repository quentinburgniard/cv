            div(class="_ds-link body")
              div(class="_ds-link-small title")= event.title
            div(class="_ds-link action-icon")
              i(class="bi bi-chevron-right")
      div(class="col-12")
        a(alt="Backend Development" class="ds-link" href=`/${language}/${cv.data.id}/miscellaneous/new`)
          div(class="_ds-link body")
            div(class="_ds-link title") Add
          div(class="_ds-link action-icon")
            i(class="bi bi-plus-lg")
    div(class="row")
