          div(class="_ds-link body")
            div(class="_ds-link-small title")= section.title
          div(class="_ds-link action-icon")
            i(class="bi bi-chevron-right")
    div(class="col-12")
      a(alt="Backend Development" class="ds-link" href=`/${language}/${cv.data.id}/skills/new`)
        div(class="_ds-link body")
          div(class="_ds-link title") Add
        div(class="_ds-link action-icon")
          i(class="bi bi-plus-lg")
    div(class="row")
      div(class="col-12")
        div(class="ds-title")
          h1(class="_ds-title title")= __("Interests")
    each section in cv.data.attributes.interests
      div(class="col-12")
        a(alt=section.title class="ds-link-small" href=`/${language}/${cv.data.id}/interests/${section.id}`)
          div(class="_ds-link body")
            div(class="_ds-link-small title")= section.title
          div(class="_ds-link action-icon")
            i(class="bi bi-chevron-right")
    div(class="col-12")
      a(alt="Backend Development" class="ds-link" href=`/${language}/${cv.data.id}/interests/new`)
        div(class="_ds-link body")
          div(class="_ds-link title") Add
        div(class="_ds-link action-icon")
          i(class="bi bi-plus-lg")