style.
  .header, .left {
    background-color: #487d9610;
  }
  .line {
    background-color: #487d96;
  }
div(class="container-fluid")
  div(class="row header")
    div(class="col-4")
      img(src=cv.attributes.picture.data.attributes.url width="100%" height="100%")
    div(class="col-8")
      h1= cv.attributes.firstName + ' ' + cv.attributes.lastName
      h2= cv.attributes.title
      div(class="line")
  div(class="content row")
    div(class="col-4")
      div(class="left")
        section
          h3= __("Contact")
          div(class="line")
          span(class="fa fa-location-arrow" aria-hidden="true" style="font-size: 12pt; white-space: pre-line;")= cv.attributes.adress
          = __("Date of Birth: ") + cv.attributes.birthDate + ' - ' + cv.attributes.age + " " + __("y.o.")
        section
          h3= __("Skills")
          div(class="line")
          each page in cv.attributes.skills
            include Page
        section
          h3= __("Interests")
          div(class="line")
          each page in cv.attributes.interests
            include Page
    div(class="col-8")
      div(class="right")
        section
          h3= __("Professional Background")
          div(class="line")
          each event in cv.attributes.experiences
            include Event
        section
          h3= __("Education")
          div(class="line")
          each event in cv.attributes.educations
            include Event
        section
          h3= __("Miscellaneous")
          div(class="line")
          each event in cv.attributes.miscellaneous
            include Event