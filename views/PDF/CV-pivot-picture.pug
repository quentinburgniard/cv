style.
  .header, .left {
    background-color: #487d9610;
  }
  .line {
    background-color: #487d96;
  }
div(class="container-fluid")
  div(class="row header")
    div(class="col-4")
      if cv.attributes.picture.data
        img(src=cv.attributes.picture.data.attributes.url width="100%" height="150px")
    div(class="col-8")
      if cv.attributes.firstName && cv.attributes.lastName
        h1= `${cv.attributes.firstName || ''} ${cv.attributes.lastName || ''}`
      if cv.attributes.title
        h2= cv.attributes.title
      div(class="line")
  div(class="content row")
    div(class="col-4")
      div(class="left")
        section
          h3= __("Contact")
          div(class="line")
          div(class="contact-attribute")
            span(class="highlight")= __("Phone number")
            br
            span(class="address")= cv.attributes.phoneNumber
          div(class="contact-attribute")
            span(class="highlight")= __("Email")
            br
            span(class="address")= cv.attributes.email
          div(class="contact-attribute")
            span(class="highlight")= __("Address")
            br
            span(class="address")= cv.attributes.address
          if cv.attributes.birthdate
            div(class="contact-attribute")
              span(class="highlight")= __("Date of Birth")
              br
              = `${cv.attributes.birthdate} - ${cv.attributes.age} ${__("y.o.")}`
        if cv.attributes.skills.length
          section
            h3= __("Skills")
            div(class="line")
            each section in cv.attributes.skills
              include Section
        if cv.attributes.interests.length
          section
            h3= __("Interests")
            div(class="line")
            each section in cv.attributes.interests
              include Section
    div(class="col-8")
      div(class="right")
        if cv.attributes.experiences.length
          section
            h3= __("Professional Background")
            div(class="line")
            each event in cv.attributes.experiences
              include Event
        if cv.attributes.educations.length
          section
            h3= __("Education")
            div(class="line")
            each event in cv.attributes.educations
              include Event
        if cv.attributes.miscellaneous.length
          section
            h3= __("Miscellaneous")
            div(class="line")
            each event in cv.attributes.miscellaneous
              include Event